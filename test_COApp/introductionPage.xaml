<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test_COApp.introductionPage"
             NavigationPage.HasNavigationBar="false">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="1,0"
                             EndPoint="0,1">
            <GradientStop Color="#ff669a"
                          Offset="0.1"/>
            <GradientStop Color="#6734fd"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout VerticalOptions="Center">
        <Image Source="mainlogo" HeightRequest="120"/>

        <Button Text="Login" TextTransform="None" 
                Clicked="Button_Clicked_login"
                FontSize="Large"
                FontFamily="product"
                TextColor="White"
                BackgroundColor="#0081c7"
                Padding="15"
                CornerRadius="30"
                Margin="20, 120, 20, 5"/>
        <Button Text="Register" TextTransform="None" 
                Clicked="Button_Clicked_register"
                FontSize="Large"
                FontFamily="product"
                TextColor="White"
                BackgroundColor="#0081c7"
                Padding="15"
                CornerRadius="30"
                Margin="20, 0, 20, 5"/>

    </StackLayout>
</ContentPage>